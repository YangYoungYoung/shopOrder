/* pages/schedule/schedule.wxss */

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.scroll {
  padding-bottom: 120rpx;
  width: 100%;
}

/*隐藏滚动条*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.list-item {
  width: 678rpx;
  height: 167rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;
}

.item-left {
  display: flex;
  flex-direction: row;
}

.item-img {
  width: 210rpx;
  height: 150rpx;
}

.item-name {
  margin-left: 20rpx;
  font-size: 34rpx;
  color: #2b2b2b;
}

.item-right {
  width: 100rpx;
  height: 50rpx;
  border-radius: 8rpx;
}
.line{
  width: 100%;
  height: 2rpx;
  background-color: #e0dada;
}