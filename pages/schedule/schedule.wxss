/* pages/schedule/schedule.wxss */

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.scroll {
  padding-bottom: 120rpx;
  width: 100%;
}

/*隐藏滚动条*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.list-item {
  width: 678rpx;
  height: 167rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;
  margin-top: 10rpx;
}

.item-left {
  display: flex;
  flex-direction: row;
}

.item-img {
  width: 210rpx;
  height: 150rpx;
}

.item-right {
  width: 100rpx;
  height: 50rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
}
.line{
  width: 100%;
  height: 2rpx;
  background-color: #e0dada;
  margin-top: 10rpx;
  /* margin-bottom: 10rpx; */
}
.name-price{
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;

}

.item-price{
  font-size: 28rpx;
  color: #e86458;
  margin-top: 50rpx;
}

.item-name {
  
  font-size: 34rpx;
  color: #2b2b2b;
}

.none-view{
  width: 100%;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  margin-top: 200rpx;
  text-align: center;
  align-items: center;
  color: #999999;
}