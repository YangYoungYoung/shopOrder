/**index.wxss**/

page {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-size: 100% 100%; /**等比例缩放*/
}
.banner-image{
  width: 100%;
  height: 358rpx;
}

#types {
  margin-top: 50rpx;
  width: 100%;
  height: auto;
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-top: 10rpx;
  padding-bottom: 30rpx;
}

.list-item {
  /* padding-top: 20rpx; */
  background: none;
  border: none;
  width: 25%;
  /* height: 200rpx; */
  text-align: center;
  align-items: center;
  display: flex;
  flex-direction: column;
  /* margin-top: 50rpx; */
}

.list-item::after {
  border: none;
}

.item-foot {
  font-size: 30rpx;
  width: 100%;
  margin-top: 13rpx;
  color: #242424;
}

.item-head {
  width: 100%;
  height: 110rpx;
}

.item-head image {
  width: 110rpx;
  border-radius: 100%;
  height: 100%;
}

.address {
  display: flex;
  flex-direction: row;
  margin-left: 50rpx;
  align-items: center;
  margin-top: 40rpx;
}

.address-icon {
  width: 24rpx;
  height: 30rpx;
}

.address-text {
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
}

.phone_net {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 50rpx;
}

.wifi {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 50rpx;
}

.wifi-img {
  width: 30rpx;
  height: 30rpx;
}

.wifi-text {
  font-size: 28rpx;
  color: #333;
  margin-left: 18rpx;
}

.phone {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 106rpx;
}

.shop_info {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  background-color: #fffb97;
  /* margin-top: 30rpx; */
}

.info-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.item-img {
  width: 678rpx;
  height: 350rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
}
